<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.fma.kumo">

    <uses-permission android:name="android.permission.BLUETOOTH" />
    <uses-permission android:name="android.permission.BLUETOOTH_ADMIN" />
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.INTERNET" />

    <!-- To auto-complete the email text field in the login form with the user's emails -->
    <uses-permission android:name="android.permission.GET_ACCOUNTS" />
    <uses-permission android:name="android.permission.READ_PROFILE" />
    <uses-permission android:name="android.permission.READ_CONTACTS" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity
            android:name="com.fma.kumo.facade.MainActivity"
            android:label="@string/app_name"
            android:theme="@style/AppTheme.NoActionBar">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name="com.fma.kumo.facade.LoginActivity" />
        <activity android:name="com.fma.kumo.facade.OrderCreateActivity" />
        <activity android:name="com.fma.kumo.facade.ProductCreateActivity" />
        <activity android:name="com.fma.kumo.facade.CustomerCreateActivity" />
        <activity android:name="com.fma.kumo.facade.PresetCreateActivity" />
        <activity android:name="com.fma.kumo.facade.PaymentActivity" />
        <activity
            android:name="com.fma.kumo.facade.OrderFinishActivity"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name="com.fma.kumo.facade.OrderActivity"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name="com.fma.kumo.facade.OrderHistoryActivity"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name="com.fma.kumo.facade.ProductActivity"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name="com.fma.kumo.facade.CustomerActivity"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name="com.fma.kumo.facade.SettingActivity"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name="com.fma.kumo.facade.PresetActivity"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name="com.fma.kumo.facade.RestActivity"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity android:name="com.fma.kumo.facade.SelectUnitActivity"></activity>
    </application>

</manifest>